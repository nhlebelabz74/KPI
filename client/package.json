{
  "name": "client",
  "version": "1.2.0",
  "type": "module",
  "main": "electron/main.cjs",
  "description": "KPI Tracker desktop app",
  "author": "Banzile Nhlebela <edp3@lnpbeyondlegal.com>",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron ./electron/main.cjs\"",
    "electron:build": "cross-env NODE_ENV=production vite build && electron-builder --publish always",
    "electron:build-fast": "cross-env NODE_ENV=production vite build && electron-builder --dir --config.compression=store --config.npmRebuild=false",
    "lint": "eslint ."
  },
  "build": {
    "appId": "com.lnpbeyondlegal.kpi",
    "productName": "KPI Tracker",
    "icon": "electron/assets/icon",
    "asar": true,
    "compression": "normal",
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "extends": null,
    "files": [
      "dist/**/*",
      "electron/**/*.cjs"
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "artifactName": "KPI-Tracker-${version}-Setup.${ext}"
    },
    "publish": {
      "provider": "github",
      "repo": "KPI",
      "owner": "nhlebelabz74",
      "private": false,
      "releaseType": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "electron/assets/icon.ico"
    },
    "directories": {
      "output": "release",
      "buildResources": "electron/assets"
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^4.1.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-collapsible": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@tailwindcss/vite": "^4.0.17",
    "@vitejs/plugin-react": "^4.3.4",
    "axios": "^1.8.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "dialog": "^0.3.1",
    "dotenv": "^16.4.7",
    "electron-log": "^5.3.3",
    "electron-updater": "^6.6.2",
    "input-otp": "^1.4.2",
    "jszip": "^3.10.1",
    "lucide-react": "^0.484.0",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-router-dom": "^7.4.0",
    "recharts": "^2.15.1",
    "sonner": "^2.0.2",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.17",
    "tw-animate-css": "^1.2.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "terser": "^5.39.0",
    "vite": "^6.2.0",
    "wait-on": "^8.0.3"
  }
}
